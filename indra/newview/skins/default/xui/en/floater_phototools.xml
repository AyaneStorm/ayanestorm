            <text name="T_Glow_Settings" follows="left|top" layout="topleft" left="10" font="SansSerif" height="17" width="230">Glow</text>
      </panel>
      <panel name="P_Glow_Iterations" follows="top|left" layout="topleft" top_pad="0" left="5" width="275" height="125" border_visible="true" background_visible="true">
            <check_box control_name="RenderGlow" height="16" label="Enable" layout="topleft" left="5" name="RenderGlow" top_pad="10" width="256" 
