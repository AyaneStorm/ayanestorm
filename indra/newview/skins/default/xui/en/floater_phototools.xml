            <text name="T_Glow_Res" follows="top|left" layout="topleft" left="8" top_pad="10" width="80">Quality</text>
            <slider_bar name="SB_Glow_Res" control_name="RenderGlowResolutionPow" enabled_control="RenderGlow" follows="left|right" height="16" increment="1" layout="topleft" left_pad="-20" min_val="8" max_val="10" top_delta="-2" width="127" 
                        tool_tip="Glow resolution. Higher is smoother but slower." />
            <spinner name="S_Glow_Res" control_name="RenderGlowResolutionPow" enabled_control="RenderGlow" top_delta="-3" label_width="0" left_pad="3" increment="1" decimal_digits="0" follows="top|left" max_val="10" min_val="8" width="53" 
