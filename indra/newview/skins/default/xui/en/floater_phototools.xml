      <panel name="PT_Lights" follows="top|left" layout="topleft" top_pad="8" left="0" width="285" height="22" bg_alpha_color="Phototools_Header" border_visible="true" border_thickness="1" background_visible="true">
            <text name="T_Lights" follows="left|top" layout="topleft" left="10" font="SansSerif" height="17" width="230">Lights: Local</text>
      </panel>
      <panel name="P_L_S_Settings" follows="top|left" layout="topleft" top_pad="0" left="4" width="275" height="58" border_visible="true" background_visible="true">
            <text follows="left|top" name="max_lights_label" height="10" layout="topleft" left_delta="8" top_pad="8" width="175">Max to render:</text>
